<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    android:id="@+id/frame_source"
    android:background="@drawable/gradient_background"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.App.Material">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_source"
                android:text="title"
                android:textSize="22dp"
                android:textColor="@color/DarkGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                />

            <ScrollView
                android:id="@+id/scroll_source"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/title_source"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_image"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/description_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkGray"/>


            </ScrollView>

            <Button
                android:id="@+id/link_source"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_below="@id/scroll_source"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/shape_btn"
                android:text="@string/go"
                android:textColor="@color/WhiteSmoke"
                android:textSize="15sp" />


            <View
                android:layout_width="96dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="134dp"
                android:background="@drawable/shape_btn" />

            <TextView
                android:id="@+id/category_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_source"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-126dp"
                android:text="category"
                android:textColor="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/language_source"
                android:layout_below="@id/category_source"
                android:layout_marginStart="40dp"
                android:textColor="@color/White"
                android:text="us"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>





</RelativeLayout>